.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        i.fab.fa-adn
        | AliMate
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li(class=(title === 'Home') ? 'active' : undefined)
          a(href='/') Home 主页
        li(class=(title === 'Migrant') ? 'active' : undefined)
          a(href='/api') Migrant 移民澳洲
        li(class=(title === 'Migrant') ? 'active' : undefined)
          a(href='/api') Study 留学澳洲
        li(class=(title === 'Migrant') ? 'active' : undefined)
          a(href='/api') Travel 旅游澳洲
        li(class=(title === 'Alipay') ? 'active' : undefined)
          a(href='/api/alipay') Alipay 阿里支付
        li(class=(title === 'nab') ? 'active' : undefined)
          a(href='/api/nab') nab 银行
        li(class=(title === 'Contact') ? 'active' : undefined)
          a(href='/contact') Contact 联系
        li(class=(title === 'Emergency') ? 'active' : undefined)
          a(href='/contact') Emergency 紧急联系
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=(title === 'Login') ? 'active' : undefined)
            a(href='/login') Login
          li(class=(title === 'Create Account') ? 'active' : undefined)
            a(href='/signup') Create Account
        else
          li.dropdown(class=(title === 'Account Management') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src=user.profile.picture)
              else
                img(src=user.gravatar(60))
              span= user.profile.name || user.email || user.id
              i.caret
            ul.dropdown-menu
              li
                a(href='/account') My Account
              li.divider
              li
                a(href='/logout') Logout
